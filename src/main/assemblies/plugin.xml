<?xml version="1.0"?>
<assembly>
    <id>plugin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
     <!-- Add the plugin's compiled JAR to the root of the ZIP -->
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!-- Add metadata files from src/main/resources to the root of the ZIP -->
        <fileSet>
            <directory>${project.build.resources[0].directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>plugin-descriptor.properties</include>
            </includes>
            <filtered>true</filtered> <!-- This enables property replacement (e.g., ${project.version}) -->
        </fileSet>
    </fileSets>
     <files>
        <!-- This is the new, crucial part -->
        <!-- Add the entitlement-policy.yaml -->
        <file>
            <source>${project.build.outputDirectory}/entitlement-policy.yaml</source>
            <outputDirectory>/</outputDirectory>
            <destName>entitlement-policy.yaml</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.google.guava:guava</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>